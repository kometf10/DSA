
@inherits EventCategoryEditBase
@page "/EventCategory/Edit/{id}"
@attribute [Authorize(Policy = "events-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Edit"] @Localizer["Event Category"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <EventCategoryForm EventCategory="EntityItem" IsEdit="true" />

    <SubmitBtn Text="Save" Busy="EditBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/EventCategories/List"))" />