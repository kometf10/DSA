@using OA.Domin.DSA
@using OA.Domin.Settings


<div class="form-group row">
    <div class="col-sm-6">
        <MInputText @bind-Value="EventCategory.Name" For="@(() => EventCategory.Name)" Id="Name" EntityType="typeof(EventCategory)" PropName="Name" Active="@Active" />
    </div>
    <div class="col-sm-6">
        <MInputNumber @bind-Value="EventCategory.Order" For="@(() => EventCategory.Order)" Id="Order" EntityType="typeof(EventCategory)" PropName="Order" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <MInputText @bind-Value="EventCategory.Descreption" For="@(() => EventCategory.Descreption)" Id="Descreption" EntityType="typeof(EventCategory)" PropName="Descreption" Active="@Active" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-8">
        <UploadFile @ref="ImageUploadControl"
                    Label="Image"
                    Types='FileSettings.MimeTypes["Image"]'
                    ImagePreview="true"
                    ShowUploaded="false"
                    MaxSize="1024 * 1024 * 1"
                    OnValidUpload="@(() => EventCategory.Image = ImageUploadControl.Files[0] )"
                    OnStartPreUpload="@(() => UploadBusy = true)"
                    OnEndPreUpload="@(() => UploadBusy = false)" />
        @if (IsEdit)
        {
            <div>
                @EventCategory.ImagePath
            </div>
        }
    </div>
    <div class="col-sm-4 select-col">
        <CheckBoxBtn Checked="EventCategory.IsActive" Text="Active" OnChange="@((bool value) => EventCategory.IsActive = value)" />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="M-center">
            @if (UploadBusy)
            {
                <MiniLoading />
            }
        </div>
    </div>
</div>

