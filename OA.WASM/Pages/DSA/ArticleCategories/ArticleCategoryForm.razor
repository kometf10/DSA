@using OA.Domin.DSA


<div class="form-group row">
    <div class="col-sm-6">
        <MInputText @bind-Value="ArticleCategory.Name" For="@(() => ArticleCategory.Name)" Id="Name" EntityType="typeof(ArticleCategory)" PropName="Name" Active="@Active" />
    </div>
    <div class="col-sm-6 select-col">
        <MInputSelect @bind-Value="ArticleCategory.Type" For="@(() => ArticleCategory.Type)" Items="ArticleCategoryTypeItems" Id="Type" EntityType="typeof(ArticleCategory)" PropName="Type" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-10">
        <MInputText @bind-Value="ArticleCategory.Description" For="@(() => ArticleCategory.Description)" Id="Description" EntityType="typeof(ArticleCategory)" PropName="Description" Active="@Active" />
    </div>
    <div class="col-sm-2 select-col">
        <CheckBoxBtn Checked="ArticleCategory.IsActive" Text="Active" OnChange="@((bool value) => ArticleCategory.IsActive = value)" />
    </div>
</div>
