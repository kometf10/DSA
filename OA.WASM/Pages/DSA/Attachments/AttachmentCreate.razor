@inherits AttachmentCreateBase
@page "/Attachment/Create"
@attribute [Authorize(Policy = "attachments-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Create"] @Localizer["Attachment"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <AttachmentForm Attachment="EntityItem" />

    <SubmitBtn Text="Create" Busy="CreateBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/Attachments/List"))" />
