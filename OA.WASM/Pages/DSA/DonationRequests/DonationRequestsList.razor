@using OA.Domin.DSA
@page "/DonationRequests/List"
@inherits DonationRequestsListBase
@attribute [Authorize(Policy = "donations-control")]

@if (ListData == null)
{
    <Loading></Loading>
}
else
{
    <div style="position:relative" class="mb-4">

        <div class="page-title filter-title"> @Localizer["Donation Requests"] </div>

        <GridFilter T="DonationRequest" SearchSubmit="SearchEvent" GetIndexData="GetIndexDataEvent" @ref="GridFilterRef"></GridFilter>

        <div class="export-links">
            <IconBtn ClassList="btn btn-outline btn-rounded btn-sm px-2" IconClassList="far fa-file-excel i-lg" ClickCallBack="@(() => Export("Exel", nameof(DonationRequest)))"></IconBtn>
            <IconBtn ClassList="btn btn-outline btn-rounded btn-sm px-2" IconClassList="far fa-file-pdf i-lg" ClickCallBack="@(() => Export("Pdf", nameof(DonationRequest)))"></IconBtn>
            @if (ExportBusy)
            {<MiniLoading size="25px"></MiniLoading>}
        </div>

    </div>

    if (GetBusy)
    {
        <Loading></Loading>
    }
    else
    {
        <Grid Items="ListData">
            <GridHeader>
                <th> @Localizer["Beneficiary Type"] </th>
                <th> @Localizer["Benefeciary"]</th>
                <th> @Localizer["Donation Type"]</th>
                <th> @Localizer["Amout"]</th>
                <th> @Localizer["Date"]</th>
                <th> @Localizer["Accepted"]</th>
                <th> @Localizer["Assigned"]</th>
                <th> @Localizer["Options"] </th>
            </GridHeader>
            <GridRow>
                <td> <span> @Localizer["Beneficiary Type"] </span> @context.BeneficiaryType </td>
                <td> <span> @Localizer["Benefeciary"] </span> </td>
                <td> <span> @Localizer["Donation Type"] </span> @context.DonationType?.Name  </td>
                <td> <span> @Localizer["Amount"] </span> @context.Amount.ToString("#,00")</td>
                <td> <span> @Localizer["Date"] </span> @context.Date.ToShortDateString() </td>
                <td> <span> @Localizer["Accepted"] </span> <CheckMark Checked="@context.IsAccepted"/> </td>
                <td> <span> @Localizer["Assigned"] </span> <CheckMark Checked="@context.IsAssigned" /> </td>
                <td>
                    <GridRowOptions EditEvent="@(() => NavigationManager.NavigateTo($"/DonationRequest/Edit/{context.Id}"))"
                                    DeleteEvent="@(() => DeleteItem(context.Id) )">
                    </GridRowOptions>
                </td>
            </GridRow>
        </Grid>

        <Pagination PagingData="PagingMetaData" SelectedPage="SelectedPageEvent" Spread="2"></Pagination>
    }
}

<Confirm ConfirmationChanged="ConfirmationEvent" @ref="Confirmation" ConfirmTxt="Confirm" Title="Confirm Delete"> </Confirm>



