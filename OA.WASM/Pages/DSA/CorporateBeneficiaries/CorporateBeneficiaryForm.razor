@using OA.Domin.DSA
@using OA.WASM.Pages.DSA.People

<div class="form-group row">
    <div class="col-sm-6">
        <MInputText @bind-Value="CorporateBeneficiary.Name" For="@(() => CorporateBeneficiary.Name)" Id="Name" EntityType="typeof(CorporateBeneficiary)" PropName="Name" Active="@Active" />
    </div>
    <div class="col-sm-6">
        <MInputText @bind-Value="CorporateBeneficiary.EnName" For="@(() => CorporateBeneficiary.EnName)" Id="EnName" EntityType="typeof(CorporateBeneficiary)" PropName="EnName" Active="@Active" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-4">
        <MInputText @bind-Value="CorporateBeneficiary.Phone" For="@(() => CorporateBeneficiary.Phone)" Id="Phone" EntityType="typeof(CorporateBeneficiary)" PropName="Phone" Active="@Active" />
    </div>
    <div class="col-sm-4">
        <MInputText @bind-Value="CorporateBeneficiary.Email" For="@(() => CorporateBeneficiary.Email)" Id="Email" EntityType="typeof(CorporateBeneficiary)" PropName="Email" Active="@Active" />
    </div>
    <div class="col-sm-4 select-col">
        <MInputSelect @bind-Value="CorporateBeneficiary.ActivityId" For="@(() => CorporateBeneficiary.ActivityId)" Items="ActivityItems" Id="ActivityId" EntityType="typeof(CorporateBeneficiary)" PropName="ActivityId" />
    </div>
</div>

<CollapseContainer Title="Responsible Person">
    <PersonForm Person="CorporateBeneficiary.Person" IsEdit="IsEdit" />
</CollapseContainer>
