@inherits BlockCategoryEditBase
@page "/BlockCategory/Edit/{id}"
@attribute [Authorize(Policy = "blocks-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Edit"] @Localizer["Block Category"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <BlockCategoryForm BlockCategory="EntityItem" IsEdit="true" />

    <SubmitBtn Text="Save" Busy="EditBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/BlockCategories/List"))" />
