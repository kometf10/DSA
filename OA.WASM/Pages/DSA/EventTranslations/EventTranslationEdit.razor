@inherits EventTranslationEditBase
@page "/EventTranslation/Edit/{id}"
@attribute [Authorize(Policy = "blocks-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Edit"] @Localizer["Event Translation"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <EventTranslationForm EventTranslation="EntityItem" EventItems="EventItems" IsEdit="true" />

    <SubmitBtn Text="Save" Busy="EditBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/EventTranslations/List"))" />
