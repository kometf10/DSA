@inherits VacancyEditBase
@page "/Vacancy/Edit/{id}"
@attribute [Authorize(Policy = "donations-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Edit"] @Localizer["Vacancy"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <VacancyForm Vacancy="EntityItem" IsEdit="true" />

    <SubmitBtn Text="Edit" Busy="EditBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/Vacancies/List"))" />
