@using OA.Domin.DSA
@using OA.Domin.Settings


<div class="form-group row">
    <div class="col-sm-6">
        <MInputText @bind-Value="Person.Name" For="@(() => Person.Name)" Id="Name" EntityType="typeof(Person)" PropName="Name" Active="@Active" />
    </div>
    <div class="col-sm-6">
        <MInputText @bind-Value="Person.EnName" For="@(() => Person.EnName)" Id="EnName" EntityType="typeof(Person)" PropName="EnName" Active="@Active" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-6">
        <MInputText @bind-Value="Person.Phone" For="@(() => Person.Phone)" Id="Phone" EntityType="typeof(Person)" PropName="Phone" Active="@Active" />
    </div>
    <div class="col-sm-6">
        <MInputText @bind-Value="Person.Email" For="@(() => Person.Email)" Id="Email" EntityType="typeof(Person)" PropName="Email" Active="@Active" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-6">
        <MNInputDate Type="date" @bind-Value="Person.BirthDate" For="@(() => Person.BirthDate)" Id="BirthDate" EntityType="typeof(Person)" PropName="BirthDate"  />
    </div>
    <div class="col-sm-6 select-col">
        <MInputSelect @bind-Value="Person.Gender" For="@(() => Person.Gender)" Items="GenderItems" Id="Gender" EntityType="typeof(Person)" PropName="Gender" />
    </div>
</div>