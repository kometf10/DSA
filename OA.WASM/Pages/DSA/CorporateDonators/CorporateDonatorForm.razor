@using OA.Domin.DSA
@using OA.WASM.Pages.DSA.People 

<div class="form-group row">
    <div class="col-sm-6">
        <MInputText @bind-Value="CorporateDonator.Name" For="@(() => CorporateDonator.Name)" Id="Name" EntityType="typeof(CorporateDonator)" PropName="Name" Active="@Active" />
    </div>
    <div class="col-sm-6">
        <MInputText @bind-Value="CorporateDonator.EnName" For="@(() => CorporateDonator.EnName)" Id="EnName" EntityType="typeof(CorporateDonator)" PropName="EnName" Active="@Active" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-4">
        <MInputText @bind-Value="CorporateDonator.Phone" For="@(() => CorporateDonator.Phone)" Id="Phone" EntityType="typeof(CorporateDonator)" PropName="Phone" Active="@Active" />
    </div>
    <div class="col-sm-4">
        <MInputText @bind-Value="CorporateDonator.Email" For="@(() => CorporateDonator.Email)" Id="Email" EntityType="typeof(CorporateDonator)" PropName="Email" Active="@Active" />
    </div>
    <div class="col-sm-4 select-col">
        <MInputSelect @bind-Value="CorporateDonator.ActivityId" For="@(() => CorporateDonator.ActivityId)" Items="ActivityItems" Id="ActivityId" EntityType="typeof(CorporateDonator)" PropName="ActivityId" />
    </div>
</div>

<CollapseContainer Title="Responsible Person">
    <PersonForm Person="CorporateDonator.Person" IsEdit="IsEdit" />
</CollapseContainer>
