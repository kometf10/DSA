
@inherits PageTranslationCreateBase
@page "/PageTranslation/Create"
@attribute [Authorize(Policy = "pages-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Create"] @Localizer["Page Translation"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <PageTranslationForm PageTranslation="EntityItem" PageItems="PageItems" />

    <SubmitBtn Text="Create" Busy="CreateBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/PageTranslations/List"))" />

