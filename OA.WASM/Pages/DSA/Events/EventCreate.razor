@inherits EventCreateBase
@page "/Event/Create"
@attribute [Authorize(Policy = "events-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Create"] @Localizer["Event"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <EventForm Event="EntityItem" EventCategoryItems="EventCategoryItems" />

    <SubmitBtn Text="Create" Busy="CreateBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/Events/List"))" />
