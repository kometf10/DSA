@using OA.Domin.DSA
@inherits ArticleDetailsBase
@page "/Article/Details/{id}"
@attribute [Authorize("articles-control")]

<div class="page-title mb-5">
    @Localizer["Article"] @Localizer["Details"]
</div>


<DetailItem EntityType="typeof(Article)" PropName="Name" Value="@EntityItem.Name" />

<DetailItem EntityType="typeof(Article)" PropName="ArticleCategoryId" Value="@EntityItem.ArticleCategory?.Name" />

<DetailItem EntityType="typeof(Article)" PropName="Date" Value="@EntityItem.Date.ToShortDateString()" />

<DetailItem EntityType="typeof(Article)" PropName="IsActive" Value="@EntityItem.IsActive.ToString()" />

<DetailItem EntityType="typeof(Article)" PropName="FilePath" Value="@EntityItem.FilePath" />

<DetailItem EntityType="typeof(Article)" PropName="ImagePath" Value="@EntityItem.ImagePath" />

<div class="row mt-3">
    <div class="col-md-6">
        <img src="@($"{PathPrefix}{EntityItem.ImagePath}")" class="doc-preview-image" />
    </div>
</div>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/Articles/List"))" />
<Btn ClassList="btn-sm btn-comp-s" Text="Edit" ClickCallBack="@(() => NavigationManager.NavigateTo($"/Article/Edit/{EntityItem.Id}"))" />
