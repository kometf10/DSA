@inherits ArticleEditBase
@page "/Article/Edit/{id}"
@attribute [Authorize(Policy = "articles-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Edit"] @Localizer["Article"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <ArticleForm Article="EntityItem" ArticleCatigoryItems="ArticleCatigoryItems" IsEdit="true" />

    <SubmitBtn Text="Save" Busy="EditBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/Articles/List"))" />
