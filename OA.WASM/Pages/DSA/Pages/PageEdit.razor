@inherits PageEditBase
@page "/Page/Edit/{id}"
@attribute [Authorize(Policy = "pages-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Edit"] @Localizer["Page"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <PageForm Page="EntityItem" IsEdit="true" />

    <SubmitBtn Text="Save" Busy="EditBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/Pages/List"))" />
