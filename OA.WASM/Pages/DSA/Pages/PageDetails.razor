@using OA.Domin.DSA
@inherits PageDetailsBase
@page "/Page/Details/{id}"
@attribute [Authorize("pages-control")]

<div class="page-title mb-5">
    @Localizer["Page"] @Localizer["Details"]
</div>


<DetailItem EntityType="typeof(Page)" PropName="Name" Value="@EntityItem.Name" />

<DetailItem EntityType="typeof(Page)" PropName="Type" Value="@EntityItem.Type" />

<DetailItem EntityType="typeof(Page)" PropName="Order" Value="@EntityItem.Order.ToString()" />

<DetailItem EntityType="typeof(Page)" PropName="IsActive" Value="@EntityItem.IsActive.ToString()" />

<DetailItem EntityType="typeof(Page)" PropName="ImagePath" Value="@EntityItem.ImagePath" />

<div class="row mt-3">
    <div class="col-md-6">
        <img src="@($"{PathPrefix}{EntityItem.ImagePath}")" class="doc-preview-image" />
    </div>
</div>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/Pages/List"))" />

<Btn ClassList="btn-sm btn-comp-s" Text="Edit" ClickCallBack="@(() => NavigationManager.NavigateTo($"/Page/Edit/{EntityItem.Id}"))" />




